<odoo>
  <record id="action_course" model="ir.actions.act_window">
    <field name="name">Courses</field>
    <field name="res_model">my.school.course</field>
    <field name="view_mode">list,form</field>
  </record>
  <record id="view_form_course" model="ir.ui.view">
    <field name="name">course.form</field>
    <field name="model">my.school.course</field>
    <field name="arch" type="xml">
      <form string="Course">
        <group>
          <field name="name"/>
          <field name="description"/>
        </group>
      </form>
    </field>
  </record>

  <record id="view_list_course" model="ir.ui.view">
    <field name="name">course.list</field>
    <field name="model">my.school.course</field>
    <field name="arch" type="xml">
      <list string="Course List">
        <field name="name"/>
        <field name="description"/>
      </list>
    </field>
  </record>
</odoo>




